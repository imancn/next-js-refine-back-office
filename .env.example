# Database
DATABASE_URL="postgresql://username:password@localhost:5432/backoffice_db"

# NextAuth.js Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-key-here"

# JWT Configuration
JWT_SECRET="your-jwt-secret-key-here"

# OAuth Providers
# Google
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# GitHub
GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"

# Apple (optional)
APPLE_CLIENT_ID="your-apple-client-id"
APPLE_CLIENT_SECRET="your-apple-client-secret"

# Application Settings
SITE_NAME="BackOffice App"
SITE_DESCRIPTION="Secure SSR BackOffice Application"
CONTACT_EMAIL="admin@example.com"
CONTACT_PHONE="+1234567890"

# Security Settings
MAINTENANCE_MODE="false"
ALLOW_REGISTRATION="true"
REQUIRE_EMAIL_VERIFICATION="true"
REQUIRE_PHONE_VERIFICATION="false"
MAX_LOGIN_ATTEMPTS="5"
SESSION_TIMEOUT="60"

# Email Configuration (for OTP and notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# Twilio Configuration (for SMS OTP)
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_PHONE_NUMBER="+1234567890"

# File Upload
MAX_FILE_SIZE="5242880" # 5MB in bytes
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/gif,image/webp"

# Rate Limiting
RATE_LIMIT_WINDOW="900000" # 15 minutes in milliseconds
RATE_LIMIT_MAX_REQUESTS="100" # Max requests per window

# Logging
LOG_LEVEL="info"
ENABLE_AUDIT_LOGS="true"
ENABLE_REQUEST_LOGS="true"

# Development
NODE_ENV="development"
DEBUG="false"

# Blockchain API Configuration
# Moralis API Key for fetching BSC and ETH token balances
MORALIS_API_KEY="your-moralis-api-key-here"

# TronGrid API Key for fetching TRX token balances
TRONGRID_API_KEY="your-trongrid-api-key-here"

